{
  "name": "crypto-api",
  "version": "0.0.1",
  "description": "Atividade Avaliativa – Sistemas Distribuídos - 2 bimestre",
  "author": "Pedro Reis - CC7M/2025 <contatodopedroreis@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:rpc": "ts-node src/rpc-main.ts",
    "start:dev": "nest start --watch",
    "start:dev:rpc": "ts-node-dev --respawn --project tsconfig.json -r tsconfig-paths/register src/rpc-main.ts",
    "start:dev:all": "concurrently \"pnpm run start:dev\" \"pnpm run start:dev:rpc\"",
    "start:debug": "nest start --debug --watch"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/microservices": "^11.1.1",
    "@nestjs/platform-express": "^11.0.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/node": "^22.10.7",
    "concurrently": "^9.1.2",
    "globals": "^16.0.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}